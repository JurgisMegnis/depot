.blog {
    .entry_article {
        display: inline-block;
        padding-left: 5px;
        
        img {
            margin-top: 15px;
            width: 563px;
            height: auto;
        }
        
        div.title_bg{
            position: relative;
            width: 563px;
            height: 35px;
            background-color: #58c4f1;
            opacity: 0.7;
            margin-top: -39px;
        }
        
        .title {
            
            p {
                position: relative;
                margin-top: -26px;
                margin-left: 20px;
                color: white;
                font-family: 'Helvetica Neue';
                font-weight: 300;
                font-size: 18px;
                cursor: pointer;
            }
        }
    }
    
    .entry_article:hover {
        display: inline-block;
        
        img {
            margin-top: 15px;
            width: 563px;
            height: auto;
        }
        
        div.title_bg{
            position: relative;
            width: 563px;
            height: 35px;
            opacity: 0.7;
            background-color: #2a95b0;
            margin-top: -39px;
        }
        .title {
            
            p {
                position: relative;
                margin-top: -26px;
                margin-left: 20px;
                color: white;
                font-family: 'Helvetica Neue';
                font-weight: 300;
                font-size: 18px;
            }
        }
    }
}