.about {
    
    img {
        display: inline-block;
    }
    
    .design {
        width: 500px;
        height: auto;
        display: inline-block;
        position: absolute;
        margin-top: 50px;
        
        .dot {
            background: url("<%= asset_path('dot.png')%>");
            width: 9px;
            height: 9px;
            display: inline-block;
            position: relative;
            margin-bottom: 5px;
            margin-left: 5px;
        }
        
        h1 {
            font-family: 'Helvetica Neue';
            font-weight: bold;
            font-size: 24px;
            text-transform: uppercase;
            color: black;
            display: inline-block;
        }
        
        p {
            font-family: 'Helvetica Neue';
            font-weight: 200;
            font-size: 18px;
            text-align: justify;
