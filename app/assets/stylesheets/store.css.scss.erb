.store {
    margin: 0 auto;
    
    /* An entry in the store catalog */
    .entry {
        display: inline-block;
        height: 343px;
        width: 250px;
        margin-top: 15px;
        margin-right: 30px;
    
    img {
        width: 250px;
        margin-bottom: 5px;
        position: absolute;
    }
    
    div.price_line {
        margin-left: 172px;
        margin-top: 276px;
        position: relative;
        width: 78px;
        height: 67px;
        background: url("<%= asset_path('price_bg.png')%>");
        background-repeat: no-repeat;
    }
    
    .price {
        position: absolute; 
        color: white;
        font-weight: 200;
        margin-left:25px;
        margin-right: 10px;
        margin-top:20px;
        font-family: "Helvetica Neue";
    }
    }
}